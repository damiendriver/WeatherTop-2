{{> menu id="userdetails"}}
<div class="ui center aligned middle aligned two column grid segment">
    <div class="column">
        <form class="ui stacked segment form" action="/userdetails" method="POST">
            <h3 class="ui header">Edit User Details</h3>
            <div class="two fields">
        <div class="field">
                    <label>First Name</label>
                    <input placeholder="{{user.firstName}}" type="text" name="firstname" value = "{{user.firstName}}">
                </div>
                <div class="field">
                    <label>Last Name</label>
                    <input placeholder="{{user.lastName}}" type="text" name="lastname" value = "{{user.lastName}}">
                </div>
            </div>
            <div class="field">
                <label>Email</label>
                <input placeholder="{{user.email}}" type="text" name="email" value="{{user.email}}">
            </div>
            <div class="field">
                <label>Password</label>
                <input type="password" name="password" value = "{{user.password}}">
            </div>
            <button class="ui green update button">Update User</button>
        </form>
    </div>
    <div class="column">
        <img class="ui image" src="https://cdn.glitch.global/57a1a97e-84f6-4c58-9694-289333a0eb96/edit-user.png?v=1662799230405" alt="edit user image">
    </div>
</div>