{{> menu id="dashboard"}}

{{#each stations}}
<section class="ui segment">
  <h2 class="ui header">
    {{name}}
  </h2>
  <p>
     {{>station-panel}}
  </p>

 <section class="ui stacked segment">
    
    <a href="/station/{{id}}" class="ui icon button">
      <i class="green icon folder open"></i>
    </a>
    <a href="/dashboard/deletestation/{{id}}" class="ui icon button">
      <i class="red icon trash"></i>
    </a>
  </section>
</section>
{{/each}}

<section class="ui segment">
  {{>stationmap}}
  {{> addstation}}
</section>
